<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/lila"
            android:layout_width="240dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@id/rosa1"
            android:background="#9e00ff" />

        <View
            android:id="@+id/rosa1"
            android:layout_width="82dp"
            android:layout_height="79dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#ff0080" />


        <View
            android:id="@+id/azul"
            android:layout_width="match_parent"
            android:layout_height="363dp"
            android:layout_below="@id/lila"
            android:background="#00fbff" />


        <View
            android:id="@+id/naranja"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/azul"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#ffaa15" />


        <View
            android:id="@+id/rosa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/naranja"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/naranja"
            android:background="#ff0080" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>